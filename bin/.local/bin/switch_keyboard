#!/bin/sh
case "$1" in
    next)
        if [ "$(xkb-switch -p)" = "dvorak" ]
        then xkb-switch -s "ru(ruu)"
        else xkb-switch -s "dvorak"
        fi
        ;;
    full-next)
        xkb-switch --next
        ;;
    *)
        setxkbmap -layout dvorak,ru,it,us -variant ",ruu,,"
        ;;
esac
