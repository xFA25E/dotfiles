;; -*- mode: lisp; -*-
(require 'uiop)

#-quicklisp
(let ((quicklisp-init (merge-pathnames "quicklisp/setup.lisp" (uiop:xdg-data-home))))
  (when (probe-file quicklisp-init)
    (load quicklisp-init)))

#+quicklisp
(let ((docs-dir (or (uiop:getenv-absolute-directory "XDG_DOCUMENTS_DIR")
                    (merge-pathnames "Documents/" (user-homedir-pathname)))))
  (pushnew (merge-pathnames "projects/common-lisp/" docs-dir)
           ql:*local-project-directories*))
